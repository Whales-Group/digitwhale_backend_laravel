<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirect all requests to the `public` directory
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

# Block access to sensitive files
<FilesMatch "^\..*">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "\.(env|gitignore|gitattributes|lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>